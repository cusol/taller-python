def reves(pal1, pal2):
	if len(pal1) == len(pal2):
        	n = len(pal2)
	        i = 0
	        j = n - 1
        	while i < n:
	            if pal1[i] == pal2[j]:
        	        i = i+1
                	j = j-1
	            else:
			return False
        	return True
	else:
		return False
        
valor = reves("stop","pots")
print valor
valor = reves("amor","roma")
print valor
valor = reves("asdf","asdf")
print valor
valor = reves("asdfg","asdf")
print valor
    
                
            
